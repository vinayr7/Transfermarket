for i, record in enumerate(data_sample, 1):
    print(f"   Eintrag {i}: {record.get('player_name', 'N/A')} - {record.get('goals', 0)} Tore")

print("\nüéØ FINALE ZUSAMMENFASSUNG DER MARKTWERT-ANALYSE")
print("=" * 70)

